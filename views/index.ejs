<% layout('layout') -%>
<!-- Hero Section -->
<section class="hero-section text-white py-5">
    <div class="container">
        <div class="row align-items-center min-vh-75">
            <div class="col-lg-6">
                <div class="fade-in-up">
                    <h1 class="display-3 fw-bold mb-4">Find & Hire <span style="color: yellow;">Skilled Workers</span></h1>
                    <p class="lead mb-4 opacity-90">Connect with talented professionals worldwide. From web development to graphic design, find the perfect match for your projects with our innovative platform.</p>
                    <div class="d-flex gap-3 flex-wrap">
                        <a href="/workers" class="btn btn-light btn-lg">
                            <i class="bi bi-search me-2"></i>Hire Workers
                        </a>
                        <a href="/get-hired" class="btn btn-outline-light btn-lg">
                            <i class="bi bi-person-plus me-2"></i>Get Hired
                        </a>
                    </div>

                </div>
            </div>

        </div>
    </div>
</section>

<!-- Features Section -->
<section class="py-5">
    <div class="container">
        <div class="row text-center mb-5">
            <div class="col-12">
                <h2 class="display-5 fw-bold mb-3">Why Choose <span class="text-gradient">Hire Nest</span>?</h2>
                <p class="lead text-muted">We make it easy to connect, collaborate, and get exceptional work done.</p>
            </div>
        </div>
        
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body text-center p-4">
                        <div class="category-icon bg-primary mb-3">
                            <i class="bi bi-people-fill"></i>
                        </div>
                        <h5 class="fw-bold mb-3">Skilled Professionals</h5>
                        <p class="text-muted">Access a diverse pool of talented workers across various industries and skills, all vetted for quality.</p>
                    </div>
                </div>
            </div>
            
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body text-center p-4">
                        <div class="category-icon bg-success mb-3">
                            <i class="bi bi-shield-check"></i>
                        </div>
                        <h5 class="fw-bold mb-3">Secure Platform</h5>
                        <p class="text-muted">Your projects and payments are protected with our secure booking system and encrypted transactions.</p>
                    </div>
                </div>
            </div>
            
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body text-center p-4">
                        <div class="category-icon bg-warning mb-3">
                            <i class="bi bi-clock-fill"></i>
                        </div>
                        <h5 class="fw-bold mb-3">Flexible Booking</h5>
                        <p class="text-muted">Book workers for single days or extended projects based on your needs and timeline.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Categories Section -->
<section class="py-5 bg-light">
    <div class="container">
        <div class="row text-center mb-5">
            <div class="col-12">
                <h2 class="display-5 fw-bold mb-3">Popular <span class="text-gradient">Categories</span></h2>
                <p class="lead text-muted">Find experts in various fields</p>
            </div>
        </div>
        
        <div class="row g-4">
            <div class="col-md-3 col-sm-6">
                <div class="card text-center border-0 shadow-sm h-100">
                    <div class="card-body p-4">
                        <div class="category-icon bg-primary mb-3">
                            <i class="bi bi-code-slash"></i>
                        </div>
                        <h6 class="fw-bold">Web Development</h6>
                        <p class="text-muted small">Frontend, Backend, Full-stack</p>
                        <a href="/workers?category=Web Development" class="btn btn-outline-primary btn-sm">Browse</a>
                    </div>
                </div>
            </div>
            
            <div class="col-md-3 col-sm-6">
                <div class="card text-center border-0 shadow-sm h-100">
                    <div class="card-body p-4">
                        <div class="category-icon bg-success mb-3">
                            <i class="bi bi-palette"></i>
                        </div>
                        <h6 class="fw-bold">Graphic Design</h6>
                        <p class="text-muted small">Logos, Branding, UI/UX</p>
                        <a href="/workers?category=Graphic Design" class="btn btn-outline-primary btn-sm">Browse</a>
                    </div>
                </div>
            </div>
            
            <div class="col-md-3 col-sm-6">
                <div class="card text-center border-0 shadow-sm h-100">
                    <div class="card-body p-4">
                        <div class="category-icon bg-warning mb-3">
                            <i class="bi bi-pencil-square"></i>
                        </div>
                        <h6 class="fw-bold">Content Writing</h6>
                        <p class="text-muted small">Articles, Blogs, Copywriting</p>
                        <a href="/workers?category=Content Writing" class="btn btn-outline-primary btn-sm">Browse</a>
                    </div>
                </div>
            </div>
            
            <div class="col-md-3 col-sm-6">
                <div class="card text-center border-0 shadow-sm h-100">
                    <div class="card-body p-4">
                        <div class="category-icon bg-danger mb-3">
                            <i class="bi bi-megaphone"></i>
                        </div>
                        <h6 class="fw-bold">Digital Marketing</h6>
                        <p class="text-muted small">SEO, Social Media, Ads</p>
                        <a href="/workers?category=Digital Marketing" class="btn btn-outline-primary btn-sm">Browse</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

